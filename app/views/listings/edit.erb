<div>
	<%= form_for(@listing) do |f| %>
		<div>
		<%= f.label :name%>
		<%= f.text_field :name, :value => @listing.name%>
		</div>
		<div>
		<%= f.label :address%>
		<%= f.text_area :address, :value => @listing.address%>
		</div>
		<div>
		<%= f.label :room_type%>
		<%= f.text_field :room_type, :value => @listing.room_type%>
		</div>
		<div>
		<%= f.label :tag_list, "Tags (e.g. tag1, tag2, ...)"%>
		<%= f.text_field :tag_list, :value => @listing.tag_list.join(', ')%>
		</div>
		<div>
		<%= f.file_field :image%>
		</div>
		<div>
		<%= f.submit :'Update Listing' %>
		</div>
	<% end %>
</div>